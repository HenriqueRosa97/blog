<Window x:Class="AudioRecorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <StackPanel Orientation="Horizontal">
        <Button Style="{StaticResource PlayerControlButton}" Content="Play" Click="PlayButton_Click"/>
        <Button Style="{StaticResource PlayerControlButton}" Content="Pause" Click="PauseButton_Click"/>
        <Button Style="{StaticResource PlayerControlButton}" Content="Stop" Click="StopButton_Click"/>
        <Button Style="{StaticResource RecordControlButton}" Content="Record" Click="RecordButton_Click"/>
    </StackPanel>
</Window>
